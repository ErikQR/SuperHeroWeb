@model SuperHeroWeb.Models.Heroe

<div class="container mt-5">
    <div class="row justify-content-md-center">
        <div class="col-md-8 shadow rounded border">
            @using (Html.BeginForm()){
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>HEROE</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-floating mb-3">
                    <div class="row m-2">
                        <label for="floatingInput">@Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label" })</label>
                        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @id = "floatingInputGrid", @placeholder = "1234..." } })
                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-floating mb-3">
                    <div class="row m-2">
                        <label for="floatingInput">@Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })</label>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @id = "floatingInputGrid", @placeholder = "Batman, Spider-man, Iron Man..." } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*Nivel de poder y Fecha de nacimiento*@
                <div class="row justify-content-md-evenly">
                    <div class="col-md-4">
                        <div class="form-floating">
                            @Html.EditorFor(model => model.Nivel, new { htmlAttributes = new { @class = "form-control", @id = "floatingInputGrid", @placeholder = "Nivel de poder" } })
                            @Html.ValidationMessageFor(model => model.Nivel, "", new { @class = "text-danger" })
                            <label for="floatingInputGrid">Nivel de poder</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating">
                            @Html.EditorFor(model => model.FechaNac, new { htmlAttributes = new { @class = "form-control", @id = "floatingInputGrid", @placeholder = "Fecha de nacimiento" } })
                            @Html.ValidationMessageFor(model => model.FechaNac, "", new { @class = "text-danger" })
                            <label for="floatingInputGrid">Fecha de nacimiento</label>
                        </div>
                    </div>
                </div>

                <div class="form-floating mb-3">
                    <div class="row m-2">
                        <label for="floatingInput">@Html.LabelFor(model => model.Correo, htmlAttributes: new { @class = "control-label" })</label>
                        @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control", @id = "floatingInputGrid", @placeholder = "Correo@mail.cl" } })
                        @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*Altura y Peso*@
            <div class="row justify-content-md-evenly">
                <div class="col-md-4">
                    <div class="form-floating">
                        @Html.EditorFor(model => model.Altura, new { htmlAttributes = new { @class = "form-control", @id = "floatingInputGrid", @placeholder = "1,69 mt" } })
                        @Html.ValidationMessageFor(model => model.Nivel, "", new { @class = "text-danger" })
                        <label for="floatingInputGrid">Altura</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                        @Html.EditorFor(model => model.Peso, new { htmlAttributes = new { @class = "form-control", @id = "floatingInputGrid", @placeholder = "69 kg" } })
                        @Html.ValidationMessageFor(model => model.Peso, "", new { @class = "text-danger" })
                        <label for="floatingInputGrid">Peso</label>
                    </div>
                </div>
            </div>

                <div class="row justify-content-center">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Retirado, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="row m-2">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.Retirado)
                                @Html.ValidationMessageFor(model => model.Retirado, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row justify-content-md-end">
                        <div>
                            <input type="submit" value="Create" class="btn btn-primary my-5" />
                        </div>
                </div>
            </div>
                }
        </div>
    </div>
</div>